@model User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="~/css/category.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>
<body>
    <div>Welcome @Model.name</div>
    <div class="home">
        <div class="head">
            <img src="~/images/above.jpg" alt="">
        </div>
        <div class="container">
            <div class="content my-5">
                <h2>
                    CATEGORIES
                </h2>
                <hr>
                <div class="carts">
                    <div class="cart">
                        <div class="img">
                            <img src="~/images/jackets.jpg" alt="">
                        </div>
                        <div class="say">
                            <div class="det">
                                <h4>Jackets</h4>
                                <h6>Explore Now!</h6>
                            </div>
                            <div class="arr">
                                <a asp-controller="Home" asp-action="DashBoard">---></a>
                            </div>
                        </div>

                    </div>

                    <div class="cart">
                        <div class="img">
                            <img src="~/images/pants.jpg" alt="">
                        </div>
                        <div class="say">
                            <div class="det">
                                <h4>Trousers</h4>
                                <h6>Explore Now!</h6>
                            </div>
                            <div class="arr">
                                <a href="">---></a>
                            </div>
                        </div>

                    </div>

                    <div class="cart">
                        <div class="img">
                            <img src="~/images/shirt.jpg" alt="">
                        </div>
                        <div class="say">
                            <div class="det">
                                <h4>Shirts</h4>
                                <h6>Explore Now!</h6>
                            </div>
                            <div class="arr">
                                <a href="">---></a>
                            </div>
                        </div>

                    </div>

                    <div class="cart">
                        <div class="img">
                            <img src="~/images/boots.jpg" alt="">
                        </div>
                        <div class="say">
                            <div class="det">
                                <h4>Shoes</h4>
                                <h6>Explore Now!</h6>
                            </div>
                            <div class="arr">
                                <a href="">---></a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
</body>
</html>

